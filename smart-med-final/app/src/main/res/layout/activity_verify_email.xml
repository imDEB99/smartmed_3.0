<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="@drawable/abcd"
    >


    <TextView
        android:id="@+id/verifyEmailMsgId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check your email. \n"
        android:textSize="6mm"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="190dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your account has been created. Now you need to activate it\n"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check your email and click the activation link you've just received. Click VerifyYour Email."
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="10dp"

        />



    <Button
        android:id="@+id/VarifyBtnId"
        android:layout_width="match_parent"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="Verify"
        android:background="@drawable/background_button"


        />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/progressBar"
        android:visibility="invisible"

        />




</LinearLayout>
