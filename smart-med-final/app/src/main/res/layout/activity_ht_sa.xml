<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:orientation="vertical"
    tools:context=".HtS_A">

    <ImageView
        android:id="@+id/doctor_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/dr_ayesha"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prof. Dr. Ayesha Rafiq Chowdhury"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MBBS, MRCP (UK), FCPS (Medicine), MD (Cardiology), Fellow (Interventional Cardiology)"
                android:textSize="14sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cardiology  Medicine Specialist
Jalalabad Ragib-Rabeya Medical College  Hospital"
                android:textAlignment="center"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".DoctorDetailsActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chamber and Appointment:
Ibn Sina Hospital, Sylhet
Address: Sobhani Ghat Point, Mirabazar-Subhanighat Road, Sylhet
Visiting Hour: 4pm to 9pm (Closed: Friday)
Appointment: +8809636300300"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Prof. Dr. Ayesha Rafiq Chowdhury is a Cardiologist in Sylhet. Her qualification is MBBS, MRCP (UK), FCPS (Medicine), MD (Cardiology), Fellow (Interventional Cardiology). She is a Professor and Head in the Department of Cardiology at Jalalabad Ragib-Rabeya Medical College and Hospital. She regularly provides treatment to her patients at Ibn Sina Hospital, Sylhet. Practicing hour of Prof. Dr. Ayesha Rafiq Chowdhury at Ibn Sina Hospital, Sylhet is 4pm to 9pm (Closed: Friday)."
            android:textAlignment="center" />

        <!-- Appointment button -->
        <Button
            android:id="@+id/mdSAappoinmentBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Make Appointment"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

</LinearLayout>


