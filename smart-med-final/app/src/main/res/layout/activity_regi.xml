<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:background="@drawable/abcd"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Register"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="70dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a New Account"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/pfullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/input_background"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_person"
        android:longClickable="true"
        android:drawablePadding="5dp"
        android:hint="Full Name"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/pemailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/input_background"
        android:drawableLeft="@drawable/ic_email"
        android:longClickable="true"
        android:drawablePadding="5dp"
        android:hint="Email"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        />

    <EditText
        android:id="@+id/pphoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/input_background"
        android:drawableLeft="@drawable/ic_phone"
        android:longClickable="true"
        android:drawablePadding="5dp"
        android:hint="Mobile"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        />
    <EditText
        android:id="@+id/ppassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/input_background"
        android:drawableLeft="@drawable/ic_security"
        android:drawablePadding="5dp"
        android:hint="Password"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        />

    <Button
        android:id="@+id/pSignupBtn"
        android:layout_width="match_parent"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="SignUp"
        android:background="@drawable/background_button"
        />

    <TextView
        android:id="@+id/goToLoginActivity"
        android:layout_width="match_parent"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/already_have_an_account_login"
        android:textSize="18dp"


        />


</LinearLayout>